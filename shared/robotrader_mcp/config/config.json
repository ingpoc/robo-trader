{
  "database": {
    "path": "./state/robo_trader.db",
    "backup_enabled": true,
    "backup_interval_hours": 24,
    "max_backup_files": 7
  },
  "api": {
    "host": "0.0.0.0",
    "port": 8000,
    "cors_enabled": true
  },
  "queues": {
    "timeout_seconds": 30,
    "max_retries": 3
  },
  "security": {
    "authentication_enabled": false,
    "api_key_required": false
  }
}