{
  "environment": "paper",
  "project_dir": ".",
  "state_dir": "state",
  "logs_dir": "logs",
  "max_turns": 50,
  "database": {
    "enabled": true,
    "path": "robo_trader.db",
    "backup_enabled": true,
    "backup_interval_hours": 24,
    "max_backup_files": 7
  },
  "risk": {
    "max_position_size_percent": 5.0,
    "max_portfolio_risk_percent": 10.0,
    "max_single_symbol_exposure_percent": 15.0,
    "stop_loss_percent": 2.0,
    "take_profit_percent": 5.0,
    "max_daily_trades": 10,
    "max_daily_loss_percent": 3.0
  },
  "technical": {
    "indicators": [
      "rsi",
      "macd",
      "bollinger",
      "ema"
    ],
    "timeframes": [
      "5m",
      "15m",
      "1h"
    ],
    "rsi_period": 14,
    "macd_fast": 12,
    "macd_slow": 26,
    "macd_signal": 9,
    "bollinger_period": 20,
    "bollinger_std": 2.0,
    "ema_periods": [
      9,
      21,
      50
    ]
  },
  "screening": {
    "min_market_cap": 1000000000,
    "max_pe_ratio": 25.0,
    "min_roe_percent": 10.0,
    "max_debt_equity": 0.5,
    "sectors_allowed": [],
    "symbols_blacklist": []
  },
  "execution": {
    "default_order_type": "MARKET",
    "default_product": "CNC",
    "default_variety": "REGULAR",
    "slippage_percent": 0.5,
    "time_in_force": "DAY",
    "auto_approve_paper": true,
    "require_manual_approval_live": true
  },
  "integration": {
    "zerodha_api_key": "your_api_key_here",
    "zerodha_api_secret": "your_api_secret_here",
    "zerodha_access_token": null,
    "zerodha_request_token": null,
    "anthropic_api_key": "your_anthropic_api_key_here",
    "perplexity_api_keys": []
  },
  "scheduling": {
    "portfolio_scan_interval_minutes": 60,
    "market_screening_interval_minutes": 240,
    "market_hours_start": "09:15",
    "market_hours_end": "15:30"
  },
  "news_monitoring": {
    "batch_size": 5,
    "api_timeout_seconds": 45,
    "max_concurrent_batches": 1,
    "news_retention_days": 90,
    "earnings_retention_days": 365,
    "max_news_per_symbol": 1000,
    "perplexity_model": "sonar-pro",
    "search_recency_filter": "day",
    "max_search_results": 10
  },
  "news_daily_scheduler": {
    "enabled": true,
    "execution_time_ist": "09:00",
    "batch_size": 5,
    "min_relevance_score": 0.3,
    "focus_significant_news": true,
    "api_timeout_seconds": 45,
    "max_concurrent_batches": 1
  },
  "news_daily_scheduler": {
    "enabled": true,
    "execution_time_ist": "09:00",
    "batch_size": 5,
    "max_concurrent_batches": 1,
    "api_timeout_seconds": 45,
    "perplexity_model": "sonar-pro",
    "search_recency_filter": "day",
    "max_search_results": 10,
    "min_relevance_score": 0.6,
    "focus_significant_news": true,
    "retry_attempts": 3,
    "retry_delay_seconds": 300
  },
  "earnings_scheduler": {
    "enabled": true,
    "n_plus_one_days": 1,
    "earnings_grace_period_hours": 4,
    "surprise_threshold_percent": 5.0,
    "immediate_reanalysis": true,
    "business_day_only": true,
    "frequency_seconds": 3600,
    "batch_size": 10,
    "api_timeout_seconds": 60,
    "perplexity_model": "sonar-pro",
    "search_recency_filter": "week",
    "max_search_results": 15
  },
  "recommendation_engine": {
    "enabled": true,
    "claude_model": "claude-3-5-sonnet-20241022",
    "scoring_weights": {
      "fundamental_score": 0.35,
      "valuation_score": 0.25,
      "growth_score": 0.20,
      "risk_score": 0.15,
      "qualitative_score": 0.05
    },
    "thresholds": {
      "buy": {"min_overall": 75, "min_fundamental": 70, "max_risk": 30, "min_growth": 65},
      "hold": {"min_overall": 45, "max_overall": 74},
      "sell": {"max_overall": 44, "max_fundamental": 40, "min_risk": 70}
    },
    "confidence_levels": {
      "high": {"min_score": 80, "max_score": 100},
      "medium": {"min_score": 60, "max_score": 79},
      "low": {"min_score": 40, "max_score": 59}
    },
    "update_frequency_days": 1,
    "max_concurrent_recommendations": 5,
    "alert_on_new_recommendations": true
  },
  "agents": {
    "chat_interface": {
      "enabled": true,
      "use_claude": true,
      "frequency_seconds": 0,
      "priority": "high"
    },
    "portfolio_scan": {
      "enabled": true,
      "use_claude": false,
      "frequency_seconds": 300,
      "priority": "medium"
    },
    "market_screening": {
      "enabled": true,
      "use_claude": true,
      "frequency_seconds": 86400,
      "priority": "high"
    },
    "market_monitoring": {
      "enabled": true,
      "use_claude": false,
      "frequency_seconds": 60,
      "priority": "medium"
    },
    "stop_loss_monitor": {
      "enabled": true,
      "use_claude": false,
      "frequency_seconds": 15,
      "priority": "high"
    },
    "earnings_check": {
      "enabled": true,
      "use_claude": true,
      "frequency_seconds": 86400,
      "priority": "medium"
    },
    "news_monitoring": {
      "enabled": true,
      "use_claude": true,
      "frequency_seconds": 86400,
      "priority": "medium"
    },
    "recommendation_generation": {
      "enabled": true,
      "use_claude": true,
      "frequency_seconds": 86400,
      "priority": "high"
    },
    "ai_daily_planning": {
      "enabled": true,
      "use_claude": true,
      "frequency_seconds": 86400,
      "priority": "high"
    },
    "health_check": {
      "enabled": true,
      "use_claude": false,
      "frequency_seconds": 300,
      "priority": "low"
    },
    "trade_execution": {
      "enabled": true,
      "use_claude": true,
      "frequency_seconds": 0,
      "priority": "high"
    }
  }
}