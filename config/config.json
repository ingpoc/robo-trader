{
  "environment": "paper",
  "project_dir": ".",
  "state_dir": "state",
  "logs_dir": "logs",
  "max_turns": 50,
  "database": {
    "enabled": true,
    "path": "robo_trader.db",
    "backup_enabled": true,
    "backup_interval_hours": 24,
    "max_backup_files": 7
  },
  "risk": {
    "max_position_size_percent": 5.0,
    "max_portfolio_risk_percent": 10.0,
    "max_single_symbol_exposure_percent": 15.0,
    "stop_loss_percent": 2.0,
    "take_profit_percent": 5.0,
    "max_daily_trades": 10,
    "max_daily_loss_percent": 3.0
  },
  "technical": {
    "indicators": [
      "rsi",
      "macd",
      "bollinger",
      "ema"
    ],
    "timeframes": [
      "5m",
      "15m",
      "1h"
    ],
    "rsi_period": 14,
    "macd_fast": 12,
    "macd_slow": 26,
    "macd_signal": 9,
    "bollinger_period": 20,
    "bollinger_std": 2.0,
    "ema_periods": [
      9,
      21,
      50
    ]
  },
  "screening": {
    "min_market_cap": 1000000000,
    "max_pe_ratio": 25.0,
    "min_roe_percent": 10.0,
    "max_debt_equity": 0.5,
    "sectors_allowed": [],
    "symbols_blacklist": []
  },
  "execution": {
    "default_order_type": "MARKET",
    "default_product": "CNC",
    "default_variety": "REGULAR",
    "slippage_percent": 0.5,
    "time_in_force": "DAY",
    "auto_approve_paper": true,
    "require_manual_approval_live": true
  },
  "integration": {
    "zerodha_api_key": "${ZERODHA_API_KEY}",
    "zerodha_api_secret": "${ZERODHA_API_SECRET}",
    "zerodha_access_token": null,
    "zerodha_request_token": null,
    "zerodha_redirect_urls": {
      "development": "http://localhost:8000/api/auth/zerodha/callback",
      "docker": "http://robo-trader-app:8000/api/auth/zerodha/callback",
      "production": "https://your-domain.com/api/auth/zerodha/callback"
    },
    "anthropic_api_key": "your_anthropic_api_key_here",
    "perplexity_api_keys": [
      "your_perplexity_api_key_1_here",
      "your_perplexity_api_key_2_here",
      "your_perplexity_api_key_3_here"
    ]
  },
  "scheduling": {
    "portfolio_scan_interval_minutes": 60,
    "market_screening_interval_minutes": 240,
    "market_hours_start": "09:15",
    "market_hours_end": "15:30"
  },
  "agents": {
    "chat_interface": {
      "enabled": false,
      "use_claude": true,
      "frequency_seconds": 0,
      "priority": "high"
    },
    "portfolio_scan": {
      "enabled": false,
      "use_claude": false,
      "frequency_seconds": 300,
      "priority": "medium"
    },
    "market_screening": {
      "enabled": false,
      "use_claude": true,
      "frequency_seconds": 86400,
      "priority": "high"
    },
    "market_monitoring": {
      "enabled": false,
      "use_claude": false,
      "frequency_seconds": 60,
      "priority": "medium"
    },
    "stop_loss_monitor": {
      "enabled": false,
      "use_claude": false,
      "frequency_seconds": 15,
      "priority": "high"
    },
    "earnings_check": {
      "enabled": false,
      "use_claude": true,
      "frequency_seconds": 86400,
      "priority": "medium"
    },
    "news_monitoring": {
      "enabled": false,
      "use_claude": false,
      "frequency_seconds": 86400,
      "priority": "medium"
    },
    "ai_daily_planning": {
      "enabled": false,
      "use_claude": true,
      "frequency_seconds": 86400,
      "priority": "high"
    },
    "health_check": {
      "enabled": true,
      "use_claude": false,
      "frequency_seconds": 300,
      "priority": "low"
    },
    "trade_execution": {
      "enabled": false,
      "use_claude": true,
      "frequency_seconds": 0,
      "priority": "high"
    },
    "fundamental_monitoring": {
      "enabled": false,
      "use_claude": false,
      "frequency_seconds": 86400,
      "priority": "medium"
    },
    "earnings_fundamentals": {
      "enabled": true,
      "interval_seconds": 3600,
      "priority": "high",
      "max_retries": 3
    },
    "market_news_analysis": {
      "enabled": true,
      "interval_seconds": 600,
      "priority": "medium",
      "max_retries": 3
    },
    "deep_fundamental_analysis": {
      "enabled": true,
      "interval_seconds": 7200,
      "priority": "medium",
      "max_retries": 2
    }
  },
  "prompt_optimization": {
    "max_optimization_attempts": 3,
    "quality_threshold": 8.0,
    "enable_real_time_optimization": true,
    "min_data_quality_for_trading": 7.0,
    "optimization_timeout_seconds": 120,
    "enable_auto_prompt_evolution": true,
    "track_prompt_performance": true,
    "cache_optimized_prompts": true,
    "cache_duration_hours": 24,
    "log_optimization_details": true,
    "enable_a_b_testing": false,
    "ab_test_sample_size": 10
  },
  "claude_agent": {
    "daily_token_budget": 15000,
    "enable_prompt_optimization": true,
    "log_data_quality_analysis": true,
    "transparency_level": "full",
    "session_timeout_minutes": 30,
    "max_concurrent_sessions": 2,
    "enable_real_time_optimization": true,
    "save_optimization_history": true,
    "auto_improve_low_quality_prompts": true
  }
}