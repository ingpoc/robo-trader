/* Header System - Clean Hierarchy */
.dashboard-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-6) 0;
  border-bottom: 1px solid var(--color-border);
  margin-bottom: var(--space-8);
}

.logo-section {
  display: flex;
  align-items: center;
  gap: var(--space-4);
}

.logo {
  width: var(--space-12);
  height: var(--space-12);
  background-color: var(--color-accent);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-text-inverse);
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-bold);
}

.app-title {
  font-size: var(--font-size-3xl);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text);
  margin: 0;
}

.app-subtitle {
  font-size: var(--font-size-sm);
  color: var(--color-text-subtle);
  font-weight: var(--font-weight-normal);
  margin: var(--space-1) 0 0 0;
}

.status-section {
  display: flex;
  align-items: center;
  gap: var(--space-6);
}

.claude-status-container {
  display: flex;
  flex-direction: column;
  gap: var(--space-1);
  align-items: flex-end;
}

.status-badge {
  padding: var(--space-2) var(--space-4);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  color: var(--color-text);
  border: 1px solid var(--color-border);
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

.status-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background-color: var(--color-gray-400);
  flex-shrink: 0;
}

.status-badge.connected .status-dot {
  background-color: #10b981;
  box-shadow: 0 0 8px rgba(16, 185, 129, 0.4);
}

.status-badge.disconnected .status-dot {
  background-color: #ef4444;
}

.status-badge.limited .status-dot {
  background-color: #f59e0b;
  animation: pulse-warning 2s ease-in-out infinite;
}

@keyframes pulse-warning {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

.rate-limit-info {
  font-size: var(--font-size-xs);
  color: var(--color-text-muted);
  padding: var(--space-1) var(--space-2);
  background-color: var(--color-surface-muted);
  border-radius: var(--radius-sm);
  white-space: nowrap;
}

.rate-limit-info.warning {
  color: #d97706;
  background-color: #fef3c7;
}

.status-indicator {
  width: var(--space-2);
  height: var(--space-2);
  border-radius: 50%;
  background-color: var(--color-text-muted);
}

.status-indicator.active {
  background-color: var(--color-accent);
}

.market-time {
  font-size: var(--font-size-sm);
  color: var(--color-text-subtle);
}

/* Card System - Essential Information Containers */
.card {
  background-color: var(--color-surface);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-lg);
  padding: var(--space-6);
}

.card-header {
  margin-bottom: var(--space-6);
}

.card-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text);
  margin: 0;
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

.card-content {
  color: var(--color-text);
}

/* Metric Cards - Essential Data Display */
.metric-card {
  background-color: var(--color-surface);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-md);
  padding: var(--space-6);
  text-align: center;
}

.metric-label {
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-medium);
  color: var(--color-text-muted);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: var(--space-3);
}

.metric-value {
  font-size: var(--font-size-3xl);
  font-weight: var(--font-weight-bold);
  color: var(--color-text);
  line-height: 1.1;
  margin-bottom: var(--space-2);
}

.metric-change {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  color: var(--color-text-subtle);
}

/* Agent Status - Essential Information */
.agent-item {
  display: flex;
  align-items: center;
  gap: var(--space-4);
  padding: var(--space-4) 0;
  border-bottom: 1px solid var(--color-border-subtle);
}

.agent-item:last-child {
  border-bottom: none;
}

.agent-avatar {
  width: var(--space-8);
  height: var(--space-8);
  background-color: var(--color-accent);
  color: var(--color-text-inverse);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-semibold);
  flex-shrink: 0;
}

.agent-status {
  flex: 1;
  min-width: 0;
}

.agent-name {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text);
  margin-bottom: var(--space-1);
}

.agent-activity {
  font-size: var(--font-size-xs);
  color: var(--color-text-subtle);
}

/* Progress System - Essential Information */
.progress-item {
  margin-bottom: var(--space-4);
}

.progress-label {
  font-size: var(--font-size-xs);
  color: var(--color-text-subtle);
  margin-bottom: var(--space-2);
  display: flex;
  justify-content: space-between;
}

.progress-bar {
  width: 100%;
  height: 4px;
  background-color: var(--color-border);
  border-radius: var(--radius-sm);
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: var(--color-accent);
  border-radius: var(--radius-sm);
  transition: width 0.3s ease;
}

/* Button System - Functional Minimalism */
.btn {
  padding: var(--space-3) var(--space-6);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-md);
  background-color: var(--color-surface);
  color: var(--color-text);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  cursor: pointer;
  transition: all 0.15s ease;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-2);
  text-decoration: none;
}

.btn:hover {
  border-color: var(--color-accent);
}

.btn-primary {
  background-color: var(--color-accent);
  color: var(--color-text-inverse);
  border-color: var(--color-accent);
}

/* Form System - Essential Input Design */
.form-group {
  margin-bottom: var(--space-4);
}

.form-label {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  color: var(--color-text);
  margin-bottom: var(--space-2);
  display: block;
}

.form-input {
  width: 100%;
  padding: var(--space-3);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-md);
  background-color: var(--color-surface);
  color: var(--color-text);
  font-size: var(--font-size-sm);
}

.form-input:focus {
  outline: none;
  border-color: var(--color-accent);
}

.form-input::placeholder {
  color: var(--color-text-muted);
}

/* Data Table - Essential Information Display */
.data-table {
  width: 100%;
  border-collapse: collapse;
  font-size: var(--font-size-sm);
}

.data-table th {
  padding: var(--space-3) var(--space-4);
  text-align: left;
  font-weight: var(--font-weight-semibold);
  color: var(--color-text);
  border-bottom: 1px solid var(--color-border);
}

.data-table td {
  padding: var(--space-4);
  border-bottom: 1px solid var(--color-border-subtle);
  color: var(--color-text);
}

.data-table tbody tr:hover {
  background-color: var(--color-surface-subtle);
}

.symbol-cell {
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

.symbol-badge {
  padding: var(--space-1) var(--space-2);
  background-color: var(--color-surface-muted);
  color: var(--color-text);
  border-radius: var(--radius-sm);
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-medium);
}

/* Activity Feed - Essential Chronological Information */
.activity-feed {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.activity-item {
  display: flex;
  align-items: flex-start;
  gap: var(--space-3);
  padding: var(--space-3) 0;
  border-bottom: 1px solid var(--color-border-subtle);
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-icon {
  width: var(--space-6);
  height: var(--space-6);
  background-color: var(--color-accent);
  color: var(--color-text-inverse);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-sm);
  flex-shrink: 0;
}

.activity-content {
  flex: 1;
  min-width: 0;
}

.activity-title {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  color: var(--color-text);
  margin-bottom: var(--space-1);
}

.activity-time {
  font-size: var(--font-size-xs);
  color: var(--color-text-muted);
}

/* Trading Interface - Essential Controls */
.trading-section {
  background-color: var(--color-surface);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-lg);
  padding: var(--space-6);
  margin-top: var(--space-8);
}

.section-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text);
  margin-bottom: var(--space-6);
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

.trading-form {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--space-4);
  margin-bottom: var(--space-6);
}

/* Modal System - Clean Overlay */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgb(0 0 0 / 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.2s ease;
  z-index: 1000;
}

.modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-dialog {
  background-color: var(--color-surface);
  border-radius: var(--radius-lg);
  border: 1px solid var(--color-border);
  box-shadow: var(--shadow-base);
  max-width: 90vw;
  max-height: 90vh;
  overflow: auto;
}

.modal-header {
  padding: var(--space-6);
  border-bottom: 1px solid var(--color-border);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text);
}

.modal-content {
  padding: var(--space-6);
}

.modal-footer {
  padding: var(--space-6);
  border-top: 1px solid var(--color-border);
  display: flex;
  justify-content: flex-end;
  gap: var(--space-3);
}

/* Loading States - Subtle Animation */
.loading {
  display: inline-block;
  width: var(--space-5);
  height: var(--space-5);
  border: 2px solid var(--color-border);
  border-radius: 50%;
  border-top-color: var(--color-accent);
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* Toast Notifications - Minimalist with Stacking */
#toastContainer {
  position: fixed;
  top: var(--space-6);
  right: var(--space-6);
  z-index: 1000;
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
  max-width: 400px;
  pointer-events: none;
}

.toast {
  padding: var(--space-4) var(--space-5);
  background-color: var(--color-surface);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-base);
  font-size: var(--font-size-sm);
  color: var(--color-text);
  transform: translateX(calc(100% + var(--space-6)));
  transition: transform 0.3s ease, opacity 0.3s ease;
  opacity: 0;
  pointer-events: auto;
  display: flex;
  align-items: center;
  gap: var(--space-3);
}

.toast.show {
  transform: translateX(0);
  opacity: 1;
}

.toast.success {
  border-left: 3px solid var(--color-accent);
}

.toast.error {
  border-left: 3px solid #ef4444;
}

.toast.warning {
  border-left: 3px solid #f59e0b;
}

.toast.info {
  border-left: 3px solid var(--color-gray-600);
}

/* Responsive Design - Mobile First */
@media (max-width: 768px) {
  .dashboard-container {
    padding: var(--space-4) var(--space-3);
    gap: var(--space-6);
  }

  .dashboard-content {
    grid-template-columns: 1fr;
    gap: var(--space-6);
    min-height: auto;
  }

  .dashboard-header {
    grid-template-columns: 1fr;
    gap: var(--space-4);
    text-align: center;
  }

  .logo-section {
    justify-content: center;
  }

  .status-section {
    justify-content: center;
    flex-wrap: wrap;
  }

  .app-title {
    font-size: var(--font-size-2xl);
  }

  .data-table {
    font-size: var(--font-size-xs);
  }

  .data-table th,
  .data-table td {
    padding: var(--space-2) var(--space-3);
  }

  .modal-dialog {
    margin: var(--space-4);
    max-width: calc(100vw - var(--space-8));
  }

  .trading-form {
    grid-template-columns: 1fr;
    gap: var(--space-3);
  }
}

/* AI Insights Panel - New Component */
.ai-insights-panel {
  background-color: var(--color-surface);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-lg);
  padding: var(--space-6);
  margin-bottom: var(--space-8);
}

.ai-insights-panel h3 {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text);
  margin: 0 0 var(--space-6) 0;
}

.insight-item {
  display: flex;
  align-items: center;
  gap: var(--space-4);
  padding: var(--space-4) 0;
  border-bottom: 1px solid var(--color-border-subtle);
}

.insight-item:last-child {
  border-bottom: none;
}

.insight-icon {
  width: var(--space-10);
  height: var(--space-10);
  background-color: var(--color-accent);
  color: var(--color-text-inverse);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-lg);
  border-radius: var(--radius-md);
  flex-shrink: 0;
}

.insight-content {
  flex: 1;
  min-width: 0;
}

.insight-title {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text);
  margin-bottom: var(--space-1);
}

.insight-text {
  font-size: var(--font-size-sm);
  color: var(--color-text-subtle);
}

/* AI Status - Enhanced */
.ai-status {
  font-size: var(--font-size-sm);
  color: var(--color-text-subtle);
  padding: var(--space-2) var(--space-4);
  border-radius: var(--radius-md);
  transition: all 0.2s ease;
}

.ai-status-idle {
  background-color: var(--color-surface-muted);
  color: var(--color-text-muted);
}

.ai-status-active {
  background-color: #dbeafe;
  color: #1e40af;
  border: 1px solid #bfdbfe;
}

/* AI Recommendation Queue - New Component */
.recommendations-section h3 {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text);
  margin: 0 0 var(--space-6) 0;
}

.recommendations-queue {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.recommendation-card {
  background-color: var(--color-surface);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-md);
  padding: var(--space-4);
  transition: all 0.2s ease;
}

.recommendation-card:hover {
  border-color: var(--color-accent);
  box-shadow: var(--shadow-sm);
}

.recommendation-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--space-3);
}

.recommendation-header h4 {
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text);
  margin: 0;
}

.confidence {
  font-size: var(--font-size-xs);
  color: var(--color-text-muted);
  background-color: var(--color-surface-muted);
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-sm);
}

.recommendation-reasoning {
  font-size: var(--font-size-sm);
  color: var(--color-text-subtle);
  margin-bottom: var(--space-4);
  line-height: 1.5;
}

.recommendation-actions {
  display: flex;
  gap: var(--space-2);
}

.recommendation-actions button {
  padding: var(--space-2) var(--space-4);
  font-size: var(--font-size-xs);
  border-radius: var(--radius-sm);
}

.no-recommendations {
  text-align: center;
  color: var(--color-text-muted);
  font-style: italic;
  padding: var(--space-8) 0;
}

/* Enhanced Action Buttons */
.action-buttons-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--space-4);
  margin-top: var(--space-8);
}

/* Agent Controls - Enhanced */
.agent-controls {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.agent-control-item {
  background-color: var(--color-surface);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-md);
  padding: var(--space-4);
  transition: all 0.2s ease;
}

.agent-control-item:hover {
  border-color: var(--color-accent);
}

.agent-header {
  display: flex;
  align-items: center;
  gap: var(--space-3);
  margin-bottom: var(--space-3);
}

.agent-avatar {
  width: var(--space-8);
  height: var(--space-8);
  background-color: var(--color-accent);
  color: var(--color-text-inverse);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-semibold);
  border-radius: var(--radius-md);
  flex-shrink: 0;
}

.agent-info {
  flex: 1;
  min-width: 0;
}

.agent-info h4 {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text);
  margin: 0 0 var(--space-1) 0;
}

.agent-status {
  font-size: var(--font-size-xs);
  color: var(--color-text-subtle);
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-sm);
  display: inline-block;
}

.agent-status.active {
  background-color: #dcfce7;
  color: #166534;
}

.agent-status.inactive {
  background-color: var(--color-surface-muted);
  color: var(--color-text-muted);
}

.agent-tools {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-2);
  margin-bottom: var(--space-3);
}

.tool-tag {
  font-size: var(--font-size-xs);
  color: var(--color-text-muted);
  background-color: var(--color-surface-muted);
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-sm);
  border: 1px solid var(--color-border-subtle);
}

.agent-actions {
  display: flex;
  gap: var(--space-2);
}

.agent-actions button {
  padding: var(--space-2) var(--space-4);
  font-size: var(--font-size-xs);
  border-radius: var(--radius-sm);
}

/* AI Task Progress - Enhanced */
.task-progress {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.task-item {
  background-color: var(--color-surface);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-md);
  padding: var(--space-4);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-3);
}

.task-name {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text);
}

.task-status {
  font-size: var(--font-size-xs);
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-sm);
}

.task-status.running {
  background-color: #dbeafe;
  color: #1e40af;
}

.task-status.completed {
  background-color: #dcfce7;
  color: #166534;
}

.task-status.pending {
  background-color: var(--color-surface-muted);
  color: var(--color-text-muted);
}

/* Button Variants */
.btn-sm {
  padding: var(--space-2) var(--space-4);
  font-size: var(--font-size-xs);
}

.btn-outline {
  background-color: transparent;
  border: 1px solid var(--color-border);
  color: var(--color-text);
}

.btn-outline:hover {
  background-color: var(--color-surface-subtle);
}

/* Enhanced Modal Styles */
.modal-xl {
  max-width: 1200px;
}

.modal-lg {
  max-width: 900px;
}

/* Analytics Cards */
.analytics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-6);
    margin-top: var(--space-6);
}

.analytics-card {
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--space-6);
    transition: all 0.2s ease;
}

.analytics-card:hover {
    border-color: var(--color-accent);
    box-shadow: var(--shadow-sm);
}

.analytics-card h6 {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
    margin: 0 0 var(--space-4) 0;
    display: flex;
    align-items: center;
    gap: var(--space-2);
}

.analytics-card canvas {
    max-width: 100%;
    height: auto !important;
    border-radius: var(--radius-sm);
}

/* Chart.js Custom Styling */
.chart-container {
    position: relative;
    margin: auto;
    height: 200px;
    width: 100%;
}

/* Override Chart.js default colors to match Swiss theme */
.chartjs-render-monitor {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif !important;
}

/* Chart tooltips styling */
.chartjs-tooltip {
    background: var(--color-surface) !important;
    border: 1px solid var(--color-border) !important;
    border-radius: var(--radius-sm) !important;
    box-shadow: var(--shadow-base) !important;
    color: var(--color-text) !important;
}

/* Chart legends styling */
.chartjs-legend {
    padding: var(--space-3) 0 !important;
}

.chartjs-legend-item {
    cursor: pointer !important;
    margin: 0 var(--space-3) 0 0 !important;
}

.chartjs-legend-item-text {
    color: var(--color-text-subtle) !important;
    font-size: var(--font-size-sm) !important;
    margin-left: var(--space-2) !important;
}

/* Chart grid lines */
.chartjs-grid-lines {
    stroke: var(--color-border-subtle) !important;
}

/* Chart axes */
.chartjs-axis-title {
    color: var(--color-text) !important;
    font-weight: var(--font-weight-medium) !important;
}

/* Chart ticks */
.chartjs-tick {
    color: var(--color-text-muted) !important;
}

/* Accessibility Improvements */
.sr-only {
   position: absolute;
   width: 1px;
   height: 1px;
   padding: 0;
   margin: -1px;
   overflow: hidden;
   clip: rect(0, 0, 0, 0);
   white-space: nowrap;
   border: 0;
 }

/* Focus styles for better keyboard navigation */
.btn:focus,
.form-input:focus,
.menu-item:focus {
   outline: 2px solid var(--color-primary);
   outline-offset: 2px;
}

/* High contrast mode support */
@media (prefers-contrast: high) {
   :root {
     --color-border: #000000;
     --color-border-subtle: #666666;
     --color-text: #000000;
     --color-text-subtle: #333333;
   }
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
   *,
   *::before,
   *::after {
     animation-duration: 0.01ms !important;
     animation-iteration-count: 1 !important;
     transition-duration: 0.01ms !important;
     scroll-behavior: auto !important;
   }
}

/* Section-specific content styles */
.portfolio-section,
.trading-section-full,
.analytics-section,
.agents-section,
.settings-section {
   display: none;
   margin-top: var(--space-8);
}

.settings-grid {
   display: grid;
   grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
   gap: var(--space-6);
   margin-bottom: var(--space-6);
}

.setting-item {
   background: var(--color-surface);
   border: 1px solid var(--color-border);
   border-radius: var(--radius-md);
   padding: var(--space-4);
}

.setting-item label {
   display: block;
   font-weight: var(--font-weight-medium);
   margin-bottom: var(--space-2);
   color: var(--color-text);
}

.checkbox-group {
   display: flex;
   flex-direction: column;
   gap: var(--space-2);
}

.checkbox-label {
   display: flex;
   align-items: center;
   gap: var(--space-2);
   cursor: pointer;
   font-weight: var(--font-weight-normal);
}

.checkbox-label input[type="checkbox"] {
   margin: 0;
}

.settings-actions {
   display: flex;
   justify-content: flex-end;
   gap: var(--space-3);
   padding-top: var(--space-6);
   border-top: 1px solid var(--color-border);
}

.trading-form-expanded {
   margin-top: var(--space-6);
}

.trading-form-expanded h4 {
   margin-bottom: var(--space-4);
   color: var(--color-text);
}

/* Responsive Design Updates */
@media (max-width: 768px) {
   .ai-insights-panel {
     padding: var(--space-4);
   }

  .insight-item {
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-3);
  }

  .recommendation-header {
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-2);
  }

  .recommendation-actions {
    flex-direction: column;
    width: 100%;
  }

  .recommendation-actions button {
    width: 100%;
  }

  .agent-header {
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-2);
  }

  .agent-actions {
    flex-direction: column;
    width: 100%;
  }

  .agent-actions button {
    width: 100%;
  }

  .action-buttons-grid {
    grid-template-columns: 1fr;
  }

  .analytics-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 480px) {
  .ai-insights-panel {
    padding: var(--space-3);
  }

  .recommendation-card,
  .agent-control-item {
    padding: var(--space-3);
  }

  .analytics-card {
    padding: var(--space-4);
  }
}